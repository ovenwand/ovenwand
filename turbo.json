{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"sync": {
			"outputs": [".svelte-kit/types"]
		},

		"dev": {
			"dependsOn": ["sync"],
			"cache": false
		},

		"build": {
			"dependsOn": ["sync", "^build"],
			"outputs": [".svelte-kit", ".vercel", "public"]
		},

		"preview": {
			"dependsOn": ["build"],
			"outputs": []
		},

		"docs": {
			"cache": false
		},

		"docs:build": {
			"dependsOn": ["^build"],
			"outputs": ["storybook-static"]
		},

		"docs:preview": {
			"dependsOn": ["docs:build"],
			"outputs": []
		},

		"clean": {
			"outputs": []
		},

		"//#clean": {
			"dependsOn": [],
			"outputs": []
		}
	}
}
