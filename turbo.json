{
	"$schema": "https://turborepo.org/schema.json",
	"baseBranch": "origin/master",
	"pipeline": {
		"build": {
			"dependsOn": ["sync", "^build"],
			"outputs": [".svelte-kit", ".vercel"]
		},

		"build:env": {
			"dependsOn": ["sync", "^build"],
			"outputs": [".svelte-kit", ".vercel"]
		},

		"preview": {
			"dependsOn": ["build"],
			"outputs": []
		},

		"preview:env": {
			"dependsOn": ["build:env"],
			"outputs": []
		},

		"dev": {
			"dependsOn": ["sync"],
			"cache": false
		},

		"dev:env": {
			"dependsOn": ["sync"],
			"cache": false
		},

		"clean": {
			"dependsOn": ["//#clean"],
			"cache": false
		},

		"sync": {
			"outputs": [".svelte-kit"]
		}
	}
}
