{
	"name": "@ovenwand/project",
	"version": "0.1.0",
	"description": "Monolithic project containing all ovenwand related packages/projects",
	"main": "index.js",
	"scripts": {
		"prepare": "husky install",
		"clean": "pnpx -y rimraf node_modules && pnpm clean --filter @ovenwand/*",
		"dev": "run(){ pnpm dev --filter @ovenwand/$1; }; run",
		"build": "run(){ pnpm build --filter @ovenwand/$1; }; run",
		"deploy": "run() { pnpm deploy --filter @ovenwand/$1; }; run",
		"preview": "run(){ pnpm preview --filter @ovenwand/$1; }; run",
		"test": "run() { pnpm test:unit $1; pnpm test:e2e $1; }; run",
		"test:unit": "run() { cypress $1-ct ${@:2}; }; run",
		"test:e2e": "run() { cypress $1 ${@:2}; }; run",
		"lint:eslint": "eslint",
		"lint:prettier": "prettier --plugin-search-dir=.",
		"lint": "pnpm lint:prettier -- --check . ; pnpm lint:eslint -- .",
		"format": "pnpm lint:prettier -- --write . ; pnpm lint:eslint -- --fix .",
		"check": "run() { pnpm check --filter @ovenwand/$1 -- ${@:2}; }; run",
		"ci:test": "pnpm test:unit run -- --parallel --record --key e53958d1-1aed-486c-b4c0-c97cdd7b342b"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.0",
		"@commitlint/config-conventional": "^17.0.0",
		"@cypress/vite-dev-server": "^2.2.3",
		"@sveltejs/vite-plugin-svelte": "^1.0.0-next.44",
		"@typescript-eslint/eslint-plugin": "^5.25.0",
		"@typescript-eslint/parser": "^5.25.0",
		"cypress": "^9.6.1",
		"eslint": "^8.15.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.1",
		"lint-staged": "^12.4.1",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.48.0",
		"typescript": "next",
		"vite": "^2.9.9"
	},
	"lint-staged": {
		"*.{ts,svelte,css,md,json}": "pnpm lint:prettier -- --write",
		"*.{ts,svelte}": "pnpm lint:eslint -- --cache --fix",
		"packages/**/*.{ts,svelte}": "pnpm test:unit run"
	},
	"author": "Ovenwand (info@ovenwand.com)",
	"license": "WTFPL",
	"pnpm": {
		"overrides": {
			"typescript": "next"
		}
	}
}
