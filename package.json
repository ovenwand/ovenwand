{
	"name": "@ovenwand/project",
	"version": "0.4.1",
	"description": "Monolithic project containing all ovenwand related packages/projects",
	"main": "index.js",
	"scripts": {
		"prepare": "kit install",
		"setup": "kit setup",
		"clean": "pnpm --silent dlx rimraf **/node_modules && pnpm --filter @ovenwand/* clean",
		"dev": "kit dev",
		"build": "kit build",
		"preview": "kit preview",
		"test": "run() { pnpm test:unit $1; pnpm test:e2e \"$@\"; }; run",
		"test:unit": "run() { cypress $1-ct ${@:2}; }; run",
		"test:e2e": "run() { exit_code=$?; cypress $1 ${@:2} || exit $exit_code; }; run",
		"lint:eslint": "eslint",
		"lint:prettier": "prettier --plugin-search-dir=.",
		"lint": "run() { pnpm lint:prettier --check \"$@\" ; pnpm lint:eslint \"$@\" }",
		"format": "run() { pnpm lint:prettier --write \"$@\" ; pnpm lint:eslint --fix \"$@\"; }; run",
		"check": "run() { pnpm --filter @ovenwand/$1 check ${@:2}; }; run",
		"ci:test": "pnpm test:unit run -- --parallel --record --key e53958d1-1aed-486c-b4c0-c97cdd7b342b"
	},
	"devDependencies": {
		"@cypress/vite-dev-server": "^2.2.3",
		"@ovenwand/cli": "workspace:0.0.1",
		"@sveltejs/vite-plugin-svelte": "^1.0.0-next.49",
		"@typescript-eslint/eslint-plugin": "^5.30.5",
		"@typescript-eslint/parser": "^5.30.5",
		"cypress": "^9.7.0",
		"eslint": "^8.19.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.48.0",
		"typescript": "next",
		"vite": "^2.9.13"
	},
	"lint-staged": {
		"*.{js,ts,svelte,css,md,json}": "pnpm lint:prettier --write",
		"*.{js,ts,svelte}": "pnpm lint:eslint --cache --fix",
		"packages/**/*.{js,ts,svelte}": "pnpm test run"
	},
	"author": "Ovenwand (info@ovenwand.com)",
	"license": "WTFPL",
	"pnpm": {
		"overrides": {
			"typescript": "next",
			"svelte": "3.48.0",
			"@sveltejs/kit": "1.0.0-next.367",
			"@sveltejs/adapter-auto": "1.0.0-next.55",
			"@sveltejs/vite-plugin-svelte": "1.0.0-next.49",
			"vite": "2.9.13"
		}
	}
}
