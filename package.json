{
  "name": "@ovenwand/app",
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "clean": "pnpx -y rimraf node_modules",
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "package": "svelte-kit package",
    "preview": "svelte-kit preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint:eslint": "eslint --ignore-path .gitignore",
    "lint:prettier": "prettier --ignore-path .gitignore --check --plugin-search-dir=.",
    "lint": "pnpm lint:prettier -- --check . && pnpm lint:eslint -- .",
    "format": "pnpm lint:prettier -- --write . && pnpm lint:eslint -- --fix .",
    "storybook": "start-storybook -p 6006 --no-open",
    "storybook:build": "build-storybook",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,svelte}": "pnpm lint:eslint -- --cache --fix",
    "*.{ts,svelte,css,md}": "pnpm lint:prettier -- --write"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@ovenwand/svelte-sidebar": "^0.0.5",
    "@storybook/addon-actions": "^6.5.0-alpha.55",
    "@storybook/addon-essentials": "^6.5.0-alpha.55",
    "@storybook/addon-links": "^6.5.0-alpha.55",
    "@storybook/addon-svelte-csf": "^1.1.0",
    "@storybook/builder-vite": "^0.1.24",
    "@storybook/svelte": "^6.5.0-alpha.55",
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "autoprefixer": "^10.4.4",
    "babel-loader": "^8.2.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-storybook": "^0.5.7",
    "eslint-plugin-svelte3": "^3.4.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "postcss": "^8.4.12",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.6.0",
    "svelte": "^3.46.6",
    "svelte-check": "^2.4.6",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.10.5",
    "tailwindcss": "^3.0.23",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  }
}
