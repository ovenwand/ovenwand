{
	"name": "@ovenwand/project",
	"version": "0.1.4",
	"description": "Monolithic project containing all ovenwand related packages/projects",
	"main": "index.js",
	"scripts": {
		"prepare": "husky install",
		"clean": "pnpx -y rimraf node_modules && pnpm --filter @ovenwand/* clean",
		"dev": "run(){ pnpm --filter @ovenwand/$1 dev ${@:2}; }; run",
		"build": "run(){ pnpm --filter @ovenwand/$1 build ${@:2}; }; run",
		"deploy": "run() { pnpm --filter @ovenwand/$1 deploy ${@:2}; }; run",
		"preview": "run(){ pnpm --filter @ovenwand/$1 preview ${@:2}; }; run",
		"test": "run() { pnpm test:unit $1; pnpm test:e2e \"$@\"; }; run",
		"test:unit": "run() { cypress $1-ct ${@:2}; }; run",
		"test:e2e": "run() { exit_code=$?; cypress $1 ${@:2} || exit $exit_code; }; run",
		"lint:eslint": "eslint",
		"lint:prettier": "prettier --plugin-search-dir=.",
		"lint": "run() { pnpm lint:prettier --check \"$@\" ; pnpm lint:eslint \"$@\" }",
		"format": "run() { pnpm lint:prettier --write \"$@\" ; pnpm lint:eslint --fix \"$@\"; }; run",
		"check": "run() { pnpm --filter @ovenwand/$1 check ${@:2}; }; run",
		"ci:test": "pnpm test:unit run -- --parallel --record --key e53958d1-1aed-486c-b4c0-c97cdd7b342b",
		"release": "pnpm --filter @ovenwand/* release"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.2",
		"@commitlint/config-conventional": "^17.0.2",
		"@cypress/vite-dev-server": "^2.2.3",
		"@sveltejs/vite-plugin-svelte": "^1.0.0-next.49",
		"@typescript-eslint/eslint-plugin": "^5.29.0",
		"@typescript-eslint/parser": "^5.29.0",
		"cypress": "^9.7.0",
		"eslint": "^8.18.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.1",
		"lint-staged": "^12.5.0",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.48.0",
		"typescript": "next",
		"vite": "^2.9.12"
	},
	"lint-staged": {
		"*.{ts,svelte,css,md,json}": "pnpm lint:prettier --write",
		"*.{ts,svelte}": "pnpm lint:eslint --cache --fix",
		"packages/**/*.{ts,svelte}": "pnpm test run"
	},
	"author": "Ovenwand (info@ovenwand.com)",
	"license": "WTFPL",
	"pnpm": {
		"overrides": {
			"typescript": "next"
		}
	}
}
