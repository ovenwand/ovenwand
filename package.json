{
	"name": "@ovenwand/app",
	"version": "0.2.0",
	"type": "module",
	"scripts": {
		"clean": "pnpx -y rimraf node_modules",
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint:eslint": "eslint --ignore-path .gitignore",
		"lint:prettier": "prettier --ignore-path .gitignore --check --plugin-search-dir=.",
		"lint": "pnpm lint:prettier -- --check . && pnpm lint:eslint -- .",
		"format": "pnpm lint:prettier -- --write . && pnpm lint:eslint -- --fix .",
		"storybook": "NODE_OPTIONS=--openssl-legacy-provider start-storybook -p 6006 --no-open",
		"storybook:build": "NODE_OPTIONS=--openssl-legacy-provider build-storybook",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.{ts,svelte}": "pnpm lint:eslint -- --cache --fix",
		"*.{ts,svelte,css,md}": "pnpm lint:prettier -- --write"
	},
	"devDependencies": {
		"@babel/core": "^7.17.0",
		"@commitlint/cli": "^16.1.0",
		"@commitlint/config-conventional": "^16.0.0",
		"@ovenwand/svelte-sidebar": "^0.0.5",
		"@storybook/addon-actions": "^6.5.0-alpha.36",
		"@storybook/addon-essentials": "^6.5.0-alpha.36",
		"@storybook/addon-links": "^6.5.0-alpha.36",
		"@storybook/addon-svelte-csf": "^1.1.0",
		"@storybook/svelte": "^6.5.0-alpha.36",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"babel-loader": "^8.2.3",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-storybook": "^0.5.6",
		"eslint-plugin-svelte3": "^3.4.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.3",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.6.0",
		"storybook-builder-vite": "^0.1.15",
		"svelte": "^3.46.4",
		"svelte-check": "^2.4.2",
		"svelte-loader": "^3.1.2",
		"svelte-preprocess": "^4.10.2",
		"tslib": "^2.3.1",
		"typescript": "^4.5.5"
	}
}
