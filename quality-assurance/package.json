{
  "name": "@ovenwand/quality-assurance",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "check": "pnpm check:js && pnpm check:css && pnpm check:format && pnpm check:types",
    "check:format": "prettier --check ..",
    "check:js": "eslint --config .eslintrc.json ..",
    "check:types": "pnpm -r check:types",
    "check:css": "stylelint '../**/*.css'",
    "fix": "pnpm fix:js && pnpm fix:css && pnpm fix:format",
    "fix:format": "prettier --write ..",
    "fix:js": "eslint --config .eslintrc.json --fix ..",
    "fix:css": "stylelint --fix '../**/*.css'",
    "test:e2e": "playwright test",
    "report:e2e": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.35.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^2.8.8",
    "stylelint": "^15.7.0",
    "stylelint-config-standard": "^33.0.0",
    "typescript": "^5.1.3"
  }
}
